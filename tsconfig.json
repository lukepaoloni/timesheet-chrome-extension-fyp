{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "lib": [
            "es5",
            "es6",
            "dom",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "esnext.asynciterable"
        ],
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": "./",
        "paths": {
            "@app/*": ["./src/app/*"],
            "@user/*": ["./src/user/*"],
            "@db/*": ["./src/database/*"],
            "@shared/*": ["./src/shared/*"],
            "@client/*": ["./src/client/*"],
            "@project/*": ["./src/project/*"],
            "@timesheet/*": ["./src/timesheet/*"],
            "@auth/*": ["./src/auth/*"]
        }
    },
    "exclude": ["node_modules"]
}
